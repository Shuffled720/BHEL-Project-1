@{
	ViewData["Title"] = "Home Page";
}

<ul class="nav nav-tabs">
	<li class="nav-item">
		<a class="active nav-link" data-toggle="tab" href="#component-master">Component Master</a>
	</li>
	<li class="nav-item">
		<a class="nav-link" data-toggle="tab" href="#component-type-master">Component Type Master</a>
	</li>
</ul>
<div class="tab-content">
	<div id="component-master" class="tab-pane fade show active">
		<div id="ComponentMaster"></div>
	</div>
	<div id="component-type-master" class="tab-pane fade">
		<div id="ComponentTypeMaster"></div>
	</div>
</div>
<div>
	﻿<form method="post" enctype="multipart/form-data">
		<div class="form-group">
			<div class="col-md-10">
				<p>Upload one or more files using this form:</p>
				<input type="file" name="file" />
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-10">
				<input type="submit" asp-controller="Home" asp-action="UploadExcel" class="btn btn-danger" value="Upload Excel  File" />
			</div>
		</div>
	</form>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('.nav-tabs a').click(function () {
				$(this).tab('show');
			});
		});
		$("#ComponentMaster").load("Home/ComponentMasterPartial");
		$("#ComponentTypeMaster").load("Home/ComponentTypeMasterPartial");

	</script>
}